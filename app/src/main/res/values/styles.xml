<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">@dimen/txt_size_11</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="textAllCaps">false</item>
    </style>

    <dimen name="txt_size_14">14sp</dimen>
    <dimen name="txt_size_11">11sp</dimen>
    <dimen name="txt_size_16">16sp</dimen>
    <dimen name="txt_size_18">18sp</dimen>
</resources>
